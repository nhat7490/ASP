<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/asp</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="com.caps.asp.model.TbCity"/>
      <mapping class="com.caps.asp.model.TbDistrict"/>
      <mapping class="com.caps.asp.model.TbFavourite"/>
      <mapping class="com.caps.asp.model.TbImage"/>
      <mapping class="com.caps.asp.model.TbPost"/>
      <mapping class="com.caps.asp.model.TbPostHasTbDistrict"/>
      <mapping class="com.caps.asp.model.TbRate"/>
      <mapping class="com.caps.asp.model.TbRole"/>
      <mapping class="com.caps.asp.model.TbRoom"/>
      <mapping class="com.caps.asp.model.TbRoomHasUser"/>
      <mapping class="com.caps.asp.model.TbRoomHasUtility"/>
      <mapping class="com.caps.asp.model.TbRoomReference"/>
      <mapping class="com.caps.asp.model.TbStatus"/>
      <mapping class="com.caps.asp.model.TbType"/>
      <mapping class="com.caps.asp.model.TbUser"/>
      <mapping class="com.caps.asp.model.TbUtilities"/>
      <mapping class="com.caps.asp.model.TbUtilitiesReference"/>
      <mapping class="com.caps.asp.model.TbReference"/>
      <mapping class="com.caps.asp.model.TbDistrictReference"/>
      <mapping class="com.caps.asp.model.TbNotification"/>
      <mapping class="com.caps.asp.model.TbNotificationStatus"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>